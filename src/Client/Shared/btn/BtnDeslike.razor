@inherits ComponenteCore<BtnDeslike>
@inject HttpClient Http

@if (IsVisible)
{
    <button class="btn btn-danger btn-circle btn-lg" type="button" title="Deslike" @onclick="Desike">
        <i class="far fa-thumbs-down"></i>
    </button>
}

@code {
    [Parameter] public string IdUserView { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }

    private bool IsVisible => true;

    private async Task Desike()
    {
        try
        {
            var result = await Http.Interation_Deslike(IdUserView);
            await result.ProcessResponse(Toast);
            await OnClick.InvokeAsync(null);
        }
        catch (Exception ex)
        {
            ex.ProcessException(Toast, Logger);
        }
    }
}