                        <td><a><i class="fas fa-sign-in-alt"></i> Inscrever</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {

    private ProfileVM ProfileUserVM { get; set; }
    private List<EventVM> MyEvents { get; set; }
    private List<EventVM> AvailableEvents { get; set; }

    protected override async Task LoadData()
    {
        ProfileUserVM = await Http.Profile_Get(LocalStorage);
    }
}