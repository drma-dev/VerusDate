@inherits BaseCustomField<TValue, CustomSelect<TValue, TEnum>>
@typeparam TValue
@typeparam TEnum

@using VerusDate.Shared.Helper

<Select TValue="TValue" SelectedValue="@SelectedValue" SelectedValueChanged="@SelectedValueChanged" Disabled="@Disabled">
    @if (ShowGroup)
    {
        @foreach (var group in EnumHelper.GetList(typeof(TEnum)).Select(s => s.Group).Distinct())
        {
            <SelectGroup Label="@group">
                @foreach (var item in EnumHelper.GetList(typeof(TEnum)).Where(w => w.Group == group))
                {
                    <SelectItem Value="@item.ValueObject">@item.Name</SelectItem>
                }
            </SelectGroup>
        }
    }
    else
    {
        @foreach (var item in EnumHelper.GetArray<TEnum>())
        {
            <SelectItem Value="@item">@item.GetName()</SelectItem>
        }
    }
</Select>