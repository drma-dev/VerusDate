@inherits ComponenteCore<BtnChat>
@inject HttpClient Http

<Button Color="Color.Primary" title="Conversar" Clicked="GoChat" Disabled="string.IsNullOrEmpty(IdChat)">
    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Comments"></Icon>
</Button>

@code {
    [Parameter] public string IdUserView { get; set; }
    [Parameter] public string IdChat { get; set; }

    private void GoChat()
    {
        NavigationManager.NavigateTo($"ProfileChat/{IdUserView}");
    }
}