@if (Options.Premium)
{
    <Alert Color="Color.Danger" Visible="true" Margin="Margin.Is0.FromBottom">
        <AlertDescription>
            <Blazorise.Icon Name="FontAwesomeIcons.UserLock"></Blazorise.Icon> Recurso disponível apenas para usuário premium
        </AlertDescription>
    </Alert>
}
else if (Options.Invalid)
{
    <Alert Color="Color.Danger" Visible="true" Margin="Margin.Is0.FromBottom">
        <AlertDescription>
            <Blazorise.Icon Name="FontAwesomeIcons.Bug"></Blazorise.Icon> Operação inválida. Favor, tentar novamente.
        </AlertDescription>
    </Alert>
}
else if (Options.Loading)
{
    <Alert Color="Color.Warning" Visible="true" Margin="Margin.Is0.FromBottom">
        <AlertDescription>
            <Blazorise.Icon Class="spinner-border spinner-border-sm"></Blazorise.Icon> Carregando...
        </AlertDescription>
    </Alert>
}
else if (Options.NoData)
{
    <Alert Color="Color.Primary" Visible="true" Margin="Margin.Is0.FromBottom">
        <AlertDescription>
            <Blazorise.Icon Name="FontAwesomeIcons.ExclamationTriangle"></Blazorise.Icon> Não há dados para mostrar
        </AlertDescription>
    </Alert>
}

@code {
    [Parameter] public VisibilityOptions Options { get; set; }
}