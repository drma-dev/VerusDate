@page "/login-providers"

<h1>Login</h1>

@foreach (var provider in providers)
{
    <div class="row">
        <div class="col-sm-12 col-md-9 col-lg-6">
            <a class="btn btn-block btn-lg btn-@provider.Key" style="margin: 4px 4px;" href="/.auth/login/@provider.Key">
                <span class="fab fa-@provider.Key"></span> Sign in with @provider.Value
            </a>
        </div>
    </div>
}

@code {
    public Dictionary<string, string> providers = new Dictionary<string, string>
{
        { "google", "Google" },
        { "twitter", "Twitter" },
        { "facebook", "Facebook" }
    };
}